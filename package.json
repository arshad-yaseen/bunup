{
    "name": "bunup",
    "version": "0.1.2",
    "description": "A extremely fast, zero-config bundler for TypeScript & JavaScript, powered by Bun.",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "module": "./build/index.mjs",
    "files": [
        "build"
    ],
     "packageManager": "pnpm@9.15.4",
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test-build": "bunup",
        "test": "vitest run",
        "tsc": "tsc --noEmit",
        "lint": "eslint src --fix",
        "validate": "pnpm run tsc && pnpm run lint",
        "format": "prettier --write .",
        "release": "bumpp",
        "publish:ci": "pnpm -r publish --access public --no-git-checks",
        "prepare": "husky"
    },
    "bin": {
        "bunup": "build/cli.js"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
        "@types/bun": "^1.2.5",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "bumpp": "^10.1.0",
        "bunup": "workspace:*",
        "eslint": "^8.57.0",
        "husky": "^9.1.6",
        "prettier": "^3.2.5",
        "tsup": "^8.0.2",
        "typescript": "^5.4.3",
        "vitest": "^2.0.5"
    },
    "peerDependencies": {
        "typescript": ">=4.5.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    },
    "keywords": [
        "bun",
        "bunup",
        "bun-bundler"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arshad-yaseen/bunup.git"
    },
    "maintainers": [
        {
            "name": "Arshad Yaseen",
            "email": "m@arshadyaseen.com",
            "url": "https://arshadyaseen.com"
        }
    ],
    "license": "MIT",
    "author": "Arshad Yaseen <m@arshadyaseen.com> (https://arshadyaseen.com)",
    "dependencies": {
        "chokidar": "^4.0.3",
        "rollup": "^4.35.0",
        "rollup-plugin-dts": "^6.1.1"
    }
}
