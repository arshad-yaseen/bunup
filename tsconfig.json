{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "allowJs": true,
        "noEmit": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "types": ["vitest/globals"],
        "skipLibCheck": true,
    },
    "include": [
        "packages/*/src",
        "packages/*/tests",
        "packages/*/tsup.config.ts"
    ],
    "exclude": ["node_modules", "dist", "packages/*/build"]
}
