{
    "compilerOptions": {
        "target": "es2021",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "allowJs": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "types": ["vitest/globals"],
        "skipLibCheck": true,
        "baseUrl": "project",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["project", "bunup.config.ts", "utils"],
    "exclude": ["node_modules", "build"]
}
