{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "isolatedDeclarations": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
