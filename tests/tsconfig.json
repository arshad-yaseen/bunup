{
      "compilerOptions": {
            "target": "es2020",
            "module": "esnext",
            "strict": true,
            "esModuleInterop": true,
            "moduleResolution": "node",
            "noUnusedLocals": true,
            "noImplicitAny": true,
            "allowJs": true,
            "noEmit": true,
            "resolveJsonModule": true,
            "types": ["vitest/globals"],
            "skipLibCheck": true,
            "baseUrl": "src",
            "paths": {
                  "@/*": ["./*"]
            }
      },
      "include": ["src", "bunup.config.ts", "utils"],
      "exclude": ["node_modules", "build"]
}
