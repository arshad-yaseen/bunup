{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "noUselessElse": "off"
            }
        },
        "ignore": ["**/dist"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "ignore": ["**/dist"]
    },
    "vcs": {
        "enabled": true,
        "useIgnoreFile": true,
        "clientKind": "git"
    }
}
