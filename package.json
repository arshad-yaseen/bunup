{
  "version": "0.1.0",
  "scripts": {
      "build": "pnpm -r build",
      "dev": "pnpm -r dev",
      "bunup": "bunup",
      "test": "vitest run",
      "tsc": "tsc --noEmit",
      "lint": "eslint . --ext .ts,.tsx --fix",
      "validate": "pnpm run build && pnpm run tsc && pnpm run lint",
      "format": "prettier --write .",
      "release": "bumpp",
      "publish:ci": "pnpm -r publish --access public --no-git-checks",
      "prepare": "pnpm husky"
  },
  "devDependencies": {
      "@commitlint/cli": "^19.5.0",
      "@commitlint/config-conventional": "^19.5.0",
      "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
      "@typescript-eslint/eslint-plugin": "^7.3.1",
      "bumpp": "^10.0.2",
      "eslint": "^8.57.0",
      "husky": "^9.1.6",
      "prettier": "^3.2.5",
      "typescript": "^5.4.3",
      "vitest": "^2.0.5",
      "bunup": "workspace:*"
  },
  "packageManager": "pnpm@9.15.4"
}
